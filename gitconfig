[user]
  name = Harlow Ward
  email = harlow@thoughtbot.com
[merge]
  ff = only
[push]
  default = tracking
[alias]
  amend = commit --amend -C HEAD
  ap = add -p
  co = checkout
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git remote prune origin && git branch -D $1' -
  jk = !git add --all && git commit --amend --no-edit && git push -f
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lgl = !git --no-pager lg -50
  lgs = !git --no-pager lg -15
  merge-branch = !git checkout master && git merge @{-1} --ff-only
  plre = pull --rebase
  rebase-origin = !git fetch origin && git rebase -i origin/master
  st = status
[core]
  editor = vim -f
  excludesfile = /Users/harlow/.gitignore
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[color]
  ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[apply]
  whitespace = nowarn
[branch]
  autosetupmerge = true
